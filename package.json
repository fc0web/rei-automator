{
  "name": "rei-automator",
  "version": "0.1.0",
  "description": "Rei PC Automation Tool - Lightweight PC automation powered by Rei language",
  "main": "dist/main.js",
  "author": "Nobuki Fujimoto",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "tsc -p tsconfig.renderer.json --watch",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "start": "electron .",
    "package": "electron-builder",
    "test": "jest",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "build": {
    "appId": "com.fujimoto.rei-automator",
    "productName": "Rei Automator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    }
  }
}
